# {{ ansible_managed }}
[Unit]
Description=coredns metrics and monitoring system
Documentation=https://coredns.io/docs/introduction/overview/
Wants=network-online.target
After=network-online.target

[Service]
User=root
Group=root
Type=simple
ExecStart={{ host_bin_path }}/coredns \
	-conf {{ coredns_config }}/coredns.cnf

[Install]
WantedBy=multi-user.target
